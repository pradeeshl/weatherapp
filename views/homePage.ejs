<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body {
                font-family: Arial, sans-serif;
                max-height: 100vh;
                width: 100%;
            }
            h1 {
                padding-top: 50px;
                padding-bottom: 50px;
                text-align: center;
            }
            ul {
                list-style-type: none;
                display: grid;
                padding: 50px;
                grid-template-columns: repeat(5, 1fr);
                gap: 20px;
            }
            a {
                text-decoration: none;
                color: black;
                font-size: 20px;
            }
            li {
                padding: 10px;
                border: 1px solid black;
                border-radius: 5px;
                transition: background-color 0.3s, color 0.3s;
            }
            li:hover {
                color: #fff;
                background-color: #000;
            }

        </style>
    </head>
    <body>
        <h1>Weather App</h1>
        <ul>
            <% locations.forEach((location) => {%>
                <a href="<%= location %>">
                    <li>
                        <%= location %>
                    </li>
                </a>
            <% }) %>
        </ul>
    </body>
</html>